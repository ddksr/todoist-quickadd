{
	"manifest_version": 2,

	"name": "Todoist QuickAdd",
	"description": "Quickly add various page elements as tasks",
	"version": "0.1",

	"permissions": [
		"http://todoist.com/",
		"https://todoist.com/",
		"storage"
	],
	"options_page": "html/options.html",
	"content_scripts": [ {
		"js": [ "lib/jquery-1.11.1.min.js", "js/todoist-quickadd.js" ],
		"run_at" : "document_idle",
		"matches": [
			"https://trello.com/*", 
			"*://*/ticket/*"
		]
	}]
}
